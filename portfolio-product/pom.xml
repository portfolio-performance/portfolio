<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>name.abuchen.portfolio</groupId>
		<artifactId>portfolio-app</artifactId>
		<version>0.28.3</version>
		<relativePath>../portfolio-app</relativePath>
	</parent>

	<artifactId>portfolio.product</artifactId>
	<packaging>eclipse-repository</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<includeAllDependencies>true</includeAllDependencies>
					<createArtifactRepository>true</createArtifactRepository>
					<compress>true</compress>
					<profileProperties>
						<macosx-bundled>true</macosx-bundled>
					</profileProperties>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<version>${tycho-version}</version>
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
					<execution>
						<id>archive-products</id>
						<phase>integration-test</phase>
						<goals>
							<goal>archive-products</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<formats>
						<macosx>tar.gz</macosx>
						<linux>tar.gz</linux>
					</formats>
					<products>
						<product>
							<id>name.abuchen.portfolio.product</id>
							<rootFolder>portfolio</rootFolder>
							<archiveFileName>PortfolioPerformance-${project.version}</archiveFileName>
							<rootFolders>
								<macosx>PortfolioPerformance.app</macosx>
							</rootFolders>
						</product>
					</products>
				</configuration>
			</plugin>
			<plugin>
				<groupId>name.abuchen</groupId>
				<artifactId>fix-info-plist-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>fix-info-plist</id>
						<phase>package</phase>
						<goals>
							<goal>fix-info-plist</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<productId>name.abuchen.portfolio.product</productId>
					<appName>PortfolioPerformance.app</appName>
					<properties>
						<property>
							<name>CFBundleName</name>
							<value>Portfolio Performance</value>
						</property>
						<property>
							<name>CFBundleDisplayName</name>
							<value>Portfolio Performance</value>
						</property>
						<property>
							<name>CFBundleGetInfoString</name>
							<value>Copyright 2012 - 2017 Andreas Buchen. All rights reserved.</value>
						</property>
						<property>
							<name>CFBundleLocalizations</name>
							<value>[en]</value>
						</property>
						<property>
							<name>Eclipse</name>
							<value />
						</property>
					</properties>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>dmg-distro</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>exec-maven-plugin</artifactId>
						<groupId>org.codehaus.mojo</groupId>
						<executions>
							<execution>
								<id>dmg-distro</id>
								<phase>package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>/usr/bin/hdiutil</executable>
									<arguments>
										<argument>create</argument>
										<argument>-srcfolder</argument>
										<argument>target/products/name.abuchen.portfolio.product/macosx/cocoa/x86_64</argument>
										<argument>-ov</argument>
										<argument>-format</argument>
										<argument>UDZO</argument>
										<argument>-volname</argument>
										<argument>PortfolioPerformance-${project.version}</argument>
										<argument>target/products/PortfolioPerformance-${project.version}.dmg</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>